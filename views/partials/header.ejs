<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Hike Help</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">HikeHelper</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <% if(!currentUser){ %>
                            <li><a href="/login">Login</a></li>
                            <li><a href="/register">Sign Up</a></li>
                        <% } else { %>
                            <li> <a> Logged in as: <strong><%= currentUser.username %></strong> </a> </li>
                           <li><a href="/logout">Logout</a></li>
                        <% } %>
                    </ul>
                    <form action="/walks" method="GET" class="navbar-form navbar-right">
                        <div class="form-group">
                            <input type="text" name="search" placeholder="Walk Search" class="form-control">
                        </div>
                        <input type="submit" value="Seach" class="btn btn-default">
                    </form>
                </div>
            </div>
        </nav>
        
        
        <% if(error && error.length > 0){ %>
            <div class="container">
                <div class="alert alert-danger" role="alert">
                     <%= error %> 
                </div>
            </div>
        <% } %>
        
        <% if(success && success.length > 0){ %>
            <div class="container">
                <div class="alert alert-success" role="alert">
                     <%= success %> 
                </div>
            </div>
        <% } %>