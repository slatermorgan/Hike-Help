<% include ../partials/header %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to HikeHelper</h1>
                <p>View our walks in Snowdonia hand-picked by our community</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/walks/new">Add New Walk</a>
                </p>
                <p>
                    <form action="/walks" method="GET" class="form-inline">
                        <div class="form-group">
                            <input type="text" name="search" placeholder="Walk Search" class="form-control">
                            <input type="submit" value="Seach" class="btn btn-default">
                        </div>
                    </form>
                </p>
            </div>
        </header>
    
        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% walks.forEach(function(walk){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= walk.image %>">
                        <div class="caption">
                            <h4> <%= walk.name %> </h4>
                        </div>
                        <p>
                            <a href="/walks/<%= walk._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

<% include ../partials/footer %>