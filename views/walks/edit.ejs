<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=walk.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/walks/<%= walk._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="walk[name]">Name</label>
                    <input class="form-control" type="text" name="walk[name]" value="<%= walk.name %>">
                </div>    
                <div class="form-group">
                    <label for="walk[image]">Image</label>
                    <input class="form-control" type="text" name="walk[image]" value="<%= walk.image %>">
                </div>
                <div class="form-group">
                    <label for="walk[description]">Description</label>
                    <input class="form-control" type="text" name="walk[description]" value="<%= walk.description %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/walks">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>